<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoo.u.magazine.u_hooprototype.FragmentLifestyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/llToolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_arrow_back_white_24dp" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="U-Lifestyle"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:textSize="25sp"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/navigation"
            android:layout_alignParentStart="true"
            android:layout_below="@id/llToolbar"
            android:layout_marginBottom="25dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginTop="2.5dp">


                    <ImageButton
                        android:id="@+id/catMagazines"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/lifestyle_books" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="Magazines"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/coming_soon"
                android:alpha="0.8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Services Coming Soon!"
                android:textAlignment="center"
                android:textSize="19sp"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
