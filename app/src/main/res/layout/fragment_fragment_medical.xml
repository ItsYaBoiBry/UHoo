<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoo.u.magazine.u_hooprototype.FragmentMedical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/llToolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_arrow_back_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="U-Meds"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/llToolbar"
            android:layout_above="@id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_below="@id/llToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="- Our Medical Services -"
                    android:textSize="25sp" />
            </LinearLayout>


            <LinearLayout
                android:weightSum="2"
                android:layout_above="@id/navigation"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/btnConsult"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/uhoo_medical" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/category_darkened_background"
                            android:gravity="start|bottom"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="Consult"
                            android:textColor="@color/white"
                            android:textSize="35sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/btnHomeCare"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/medical_home_care" />

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/coming_soon"
                            android:scaleType="fitCenter"
                            android:alpha="0.9"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/category_darkened_background"
                            android:gravity="start|bottom"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="Home Care"
                            android:textColor="@color/white"
                            android:textSize="35sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/btnTheraphy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/medical_therapy" />
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/coming_soon"
                            android:scaleType="fitCenter"
                            android:alpha="0.9"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/category_darkened_background"
                            android:gravity="start|bottom"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="Therapy"
                            android:textColor="@color/white"
                            android:textSize="35sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/btnAmbulance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/medical_ambulance" />

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/coming_soon"
                            android:scaleType="fitCenter"
                            android:alpha="0.9"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/category_darkened_background"
                            android:gravity="start|bottom"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="Ambulance"
                            android:textColor="@color/white"
                            android:textSize="35sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
