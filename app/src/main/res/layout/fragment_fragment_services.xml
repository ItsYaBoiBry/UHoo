<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoo.u.magazine.u_hooprototype.FragmentServices">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEF5E7">

        <RelativeLayout
            android:id="@+id/llToolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_arrow_back_white_24dp" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="U-Services"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:textSize="25sp"/>

        </RelativeLayout>

        <ScrollView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/navigation"
            android:layout_alignParentStart="true"
            android:layout_below="@id/llToolbar"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop ="1dp">

                    <ImageButton
                        android:id="@+id/catFoodDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/food_delivery_service" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="Food"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/foodDeliveryExpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnFastFood"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="- Fast Food -"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnAroundMe"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="- Restaurants &amp; Cafes -"
                        android:textSize="15dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/category_darkened_background">

                    <ImageButton
                        android:id="@+id/catDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:src="@drawable/delivery_services" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="Delivery"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/deliveryExpand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnPackageDeliveries"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="- Small Packages -"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnMovingBulk"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="- Bigger and Bulkier -"
                        android:textSize="15dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="1dp">

                    <ImageButton
                        android:id="@+id/catLaundry"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:src="@drawable/laundry_services" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="Laundry"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="1dp">

                    <ImageButton
                        android:id="@+id/catCars"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/automobile_service" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="automobile"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="1dp">

                    <ImageButton
                        android:id="@+id/catGroceries"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/groceries_service" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/category_darkened_background"
                        android:gravity="center"
                        android:text="Groceries"
                        android:textColor="@color/white"
                        android:textSize="35sp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>
